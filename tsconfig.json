{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2019"
  },
  "include": ["src"],
  "exclude": ["**/__mocks__"]
}
